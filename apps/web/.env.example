# Database (required - used by NextAuth and registration)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/playground"

# Production (Supabase) - uncomment and fill in your values
# DATABASE_URL="postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true"

# Redis URL (required for rate limit)
# Local: redis://localhost:6379
# Upstash: rediss://default:<password>@<host>.upstash.io:6379
REDIS_URL="redis://localhost:6379"

# Next.js (required)
NEXTAUTH_SECRET="your-secret-min-32-chars-for-production"
NEXTAUTH_URL="http://localhost:3000"
NEXT_PUBLIC_GRAPHQL_API_URL="http://localhost:3001/graphql"


# Logging (optional, defaults to 'debug' in dev, 'info' in production)
# Options: fatal, error, warn, info, debug, trace
LOG_LEVEL="debug"
