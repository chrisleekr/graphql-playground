{
  "$schema": "../../node_modules/turbo/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "inputs": ["$TURBO_DEFAULT$", "next.config.*", "next-env.d.ts"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["DATABASE_URL", "NEXTAUTH_URL", "NEXTAUTH_SECRET", "NEXT_PUBLIC_*"]
    },
    "dev": {
      "dependsOn": ["^build", "^db:generate"]
    }
  }
}
