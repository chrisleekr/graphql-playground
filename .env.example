# Vercel
VERCEL_TOKEN=<vercel-api-token>
VERCEL_ORG_ID=<vercel-org-id>
VERCEL_PROJECT_ID_API=<vercel-project-id-for-api>
VERCEL_PROJECT_ID_WEB=<vercel-project-id-for-web>

# Local Development (Docker)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/playground"
# DATABASE_DIRECT_URL="postgresql://postgres:postgres@localhost:5432/playground"

# Production (Supabase) - uncomment and fill in your values
# DATABASE_URL="postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true"
# DATABASE_DIRECT_URL="postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres"

# Redis URL (ioredis format)
# Local: redis://localhost:6379
# Upstash: rediss://default:<password>@<host>.upstash.io:6379
REDIS_URL="redis://localhost:6379"

# Web
NODE_ENV="development"
NEXTAUTH_SECRET="your-secret-min-32-chars-for-production"
NEXTAUTH_URL="http://localhost:3000"
NEXT_PUBLIC_GRAPHQL_API_URL="http://localhost:3001/graphql"

# API
JWT_SECRET="your-secret-min-32-chars-for-production"
PORT=3001
CORS_ORIGIN="http://localhost:3000"
# Logging (optional, defaults to 'debug' in dev, 'info' in production)
# Options: fatal, error, warn, info, debug, trace
LOG_LEVEL="debug"
# Inngest (optional in development - uses local dev server)
INNGEST_SERVE_HOST=http://host.docker.internal:3001
# For production, get from https://app.inngest.com/
# INNGEST_SIGNING_KEY="signkey-xxx"
# INNGEST_EVENT_KEY="xxx"

### Terraform
TF_TOKEN_app_terraform_io="<terraform-api-key>"

TF_VAR_vercel_api_token="<vercel-api-token>"
TF_VAR_vercel_team_id="<vercel-team-id>"
TF_VAR_project_prefix="graphql-playground"

# Get from supabase.com -> Database -> Connect -> ORMs -> Tool: Prisma
TF_VAR_database_url="postgresql://<postgres:db-password>@aws-1-ap-southeast-2.pooler.supabase.com:6543/postgres?pgbouncer=true"
TF_VAR_database_direct_url="postgresql://<postgres:db-password>@aws-1-ap-southeast-2.pooler.supabase.com:5432/postgres"

# Get from Upstash Redis
TF_VAR_redis_url="redis://default:<upstash-redis-password>@relevant-racer-14532.upstash.io:6379"

TF_VAR_jwt_secret="<your-32-char-secret>"
TF_VAR_nextauth_secret="<your-32-char-secret>"

# Get from Inngest
TF_VAR_inngest_signing_key="<your-inngest-singing-key>"
TF_VAR_inngest_event_key="<your-inngest-event-key>"
