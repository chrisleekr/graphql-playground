{
  "name": "nestjs-graphql-playground",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "dotenv -- turbo build",
    "build:api": "dotenv -- turbo build --filter=@repo/api",
    "build:web": "dotenv -- turbo build --filter=@repo/web",
    "dev": "dotenv -- turbo dev",
    "test": "turbo test",
    "clean": "turbo clean && rm -rf node_modules",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:fix": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "db:studio": "bun run --filter @repo/database db:studio",
    "docker:up": "docker compose up -d",
    "vercel:build": "cd apps/api && vercel build --prod && cd ../.. && cd apps/web && vercel build --prod && cd ../..",
    "deploy": "cd infra/terraform/vercel && terraform init && terraform apply -auto-approve",
    "deploy:plan": "cd infra/terraform/vercel && terraform init && terraform plan"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@repo/typescript-config": "workspace:*",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "prettier": "^3.7.4",
    "turbo": "^2.7.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0"
  },
  "packageManager": "bun@1.3.5",
  "engines": {
    "node": ">=24"
  },
  "volta": {
    "node": "24.12.0",
    "bun": "1.3.5"
  }
}
